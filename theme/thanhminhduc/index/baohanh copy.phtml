<script>
    $(".alert").hide(5000);
    function SubmitFormDanhGiaHoTro() {
        if (confirm(`Nhấn “Ok” để gửi đánh giá dịch vụ. `) == false) {
            return false;
        }
    }

    function onSubmit() {
        if (confirm(`Nhấn “Đồng ý” để gửi yêu cầu kích hoạt.Yêu cầu của quý khách được thực hiện trong vòng 24h`) == false) {
            return;
        }
        var dataFormArray = $("form#yeucaukichhoat").serializeArray();

        if (dataFormArray[1]["value"] == "") {

        }
        var dataFormString = $("form#yeucaukichhoat").serialize();
        $.ajax({
            url: '/index/yeucaukichhoat/',
            type: 'POST',
            data: dataFormString,
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            success: function (response) {
                alert(`Cảm ơn Quý khách đã gửi yêu cầu kích hoạt sản phẩm`);
                window.location.reload();
            },
            error: function () {
                alert("error");
            }
        });
        return false;
    };
    $(function () {
        $("#FileChonFile").change(function () {
            var file = $(this).get(0).files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function () {
                    $("#previewImg").attr("src", reader.result);
                }

                reader.readAsDataURL(file);
            }
        });
        $("form").submit(function () {
            $(".btn-submit").attr("disabled", true);
            $(".btn-submit").text("Đang gửi ...");
        })
        $("select.AjaxHTML").each(function () {
            try {
                var dataHTML = $(this).data();
                var self = $(this);
                var object = dataHTML.object;
                console.log(object);
                self.change(function () {
                    if (dataHTML.values == true) {
                        var url = dataHTML.url;
                        url = url + self.val();
                    }
                    $.ajax({
                        url: url
                    }).done(function (res) {
                        $(object).html(res);
                    });
                });
            } catch (error) {
                alert(error)
            }

        });
    })
</script>